                        WidthRequest="30" />
                -->
                <!--Google-->
                <!--
                <Image
                        Aspect="AspectFit"
                        HeightRequest="30"
                        Source="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-icon-png-transparent-background-osteopathy-16.png"
                        WidthRequest="30">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                                Command="{Binding GoogleLoginCommand}"/>
